common --lockfile_mode=off

# Automatically apply --config=linux, --config=windows etc
common --enable_platform_specific_config

build --remote_cache=grpcs://remote.buildbuddy.io
build --remote_timeout=3600

# TODO: Remove once stardoc's protobuf doesn't have warnings
build:linux --host_per_file_copt="external/.*protobuf.*@-Wno-everything"
build:linux --per_file_copt="external/.*protobuf.*@-Wno-everything"

# TODO: Remove once stardoc's zlib doesn't have warnings
build:linux --host_per_file_copt="external/.*zlib.*@-Wno-everything"
build:linux --per_file_copt="external/.*zlib.*@-Wno-everything"

test --test_output=errors

common --enable_runfiles
